<style>
    .nav-link {
        margin-bottom: 10px;
    }

    .expand .nav-link {
        margin-bottom: 18px;
    }

    .bar {
        width: 25px;
        height: 3px;
        background-color: #fff;
        margin: 6px 0;
        transition: 0.4s;
        border-radius: 2px;
    }

    /* Rotate and position the bars to create an 'X' shape */
    .hamburger-icon.active .bar.bar1 {
        transform: rotate(-45deg) translate(-5px, 6px);
    }

    .hamburger-icon.active .bar.bar2 {
        opacity: 0;
    }

    .hamburger-icon.active .bar.bar3 {
        transform: rotate(45deg) translate(-5px, -6px);
    }
</style>
