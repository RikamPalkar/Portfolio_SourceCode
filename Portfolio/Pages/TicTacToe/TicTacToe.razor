@page "/tictactoe"
@inject IJSRuntime JS

<div class="container">

    <!-- Header -->
    <h1>Play TicTacToe With AI</h1>

    <!-- Game board -->
    <div class="tictactoe-board">
        @for (int i = 0; i < 3; i++)
        {
            int row = i;
            for (int j = 0; j < 3; j++)
            {
                int col = j;
                <div class="square"
                     @onclick="()=> MakeMove(row, col)">
                    <h5 class="char">@board[row, col]</h5>
                </div>
            }
        }
    </div>

    <!-- Footer -->
    <p class="footer">
        AI opponent powered by the MinMax algorithm.<br />
